<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/saleImage_View"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sale_nameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProdutNAme"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/sale_QuantityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sQuantity"
            android:textColor="#000" />

        <TextView
            android:id="@+id/sale_Quantityletf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sQuantity"
            android:textColor="#000" />

        <TextView
            android:id="@+id/sale_priceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Produtprice"
            android:textColor="#000" />

    </LinearLayout>

</LinearLayout>